<p style="color: green"><%= notice %></p>

<%= form_with url: people_path, method: :get do |f|%>
  <%= f.text_field :search, {value: params[:search], placeholder: 'Search...'} %>
<% end %>

<h1>People</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">HPR-Number</th>
      <th scope="col">Date of birth</th>
      <th scope="col">Clinics</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <%= render partial: "person_row", locals: {person: person} %>
    <% end %>
  </tbody>
</table>


<%= link_to "New person", new_person_path, class: 'btn btn-primary' %>
